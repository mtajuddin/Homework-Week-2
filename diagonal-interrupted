int border = 20;

void setup() {
  size(400, 400);
  background(0);
}

void draw() {
  stroke(128, 128, 128);
  strokeWeight(1);
  
  int i = border;
  while (i < (width-border)) { 
  line(i, border, border,i);
  i += 15;
  }
  
  int l = border;
  while (l < width - border) {
    line(380, l, 0 + l, 380);
    l += 15;
  }
  
  textSize(350);
  fill(0, 0, 0);
  text("P", border + 95, border + 310);
}

// Where is the tiny dot on right side?
